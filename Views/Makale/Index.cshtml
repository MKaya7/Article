<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>

<body>    
    <h3>Article List
    </h3>       
       <table border="1" , cellpadding="2" cellspacing="2">
           <tr>
               <th>
               <a asp-controller="makale" asp-action="Add">Add Article</a>
               </th>
           </tr>
           <tr>
               <th>ID</th>
               <th>Title</th>
               <th>Article</th>
               <th>Author</th>
               <th>Action</th>
           </tr>
           @foreach (var makale in ViewBag.makaleler)
           {
               <tr>
                   <td>
                       @makale.Id
                   </td>
                   <td>
                       @makale.Title
                   </td>
                   <td style="height:10px; width:600px;">
                       @makale.Article
                   </td>
                   <td>
                       @makale.Author
                   </td>
                   <td>
                       <a asp-controller="makale"
                          asp-action="edit"
                          asp-route-id="@makale.Id">Edit</a> |
                       <a asp-controller="makale"
                          asp-action="delete"
                          asp-route-id="@makale.Id"
                          onclick="return confirm('Are you sure?')">Delete</a>
                   </td>
               </tr>
           }
       </table>
</body>
</html>

